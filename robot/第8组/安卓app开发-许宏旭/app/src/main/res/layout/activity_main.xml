<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.luosh.rockertest.MainActivity">

    <cn.luosh.rockertest.RockerSocketView
        android:id="@+id/rockersocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="10dp"
        app:area_background="@drawable/rocker_bg"
        app:area_radius="80dp"
        app:callback_cycle="300"
        app:rocker_background="@drawable/rocker_bg"
        app:rocker_radius="30dp" />


    <EditText
        android:id="@+id/carip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="10.5.103.168" />

    <TextView
        android:id="@+id/maohao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/carip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text=":" />

    <EditText
        android:id="@+id/carport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/maohao"
        android:text="8806" />
    <Button
        android:id="@+id/btn_car_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接"
        android:layout_toRightOf="@id/carport"/>
    <Button
        android:id="@+id/btn_car_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="断开"
        android:layout_toRightOf="@+id/btn_car_connect"/>

    <ImageView
        android:id="@+id/img_rec"
        android:layout_width="720dp"
        android:layout_height="360dp"
        android:layout_below="@id/btn_car_connect"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/rocker_bg" />

    <Button
        android:id="@+id/btn_speedUp"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:text="加速" />
    <Button
        android:id="@+id/btn_speedDown"
        android:layout_below="@id/btn_speedUp"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:text="减速" />

    <Button
        android:id="@+id/btn_turnDown"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="80dp"
        android:text="下"
        />
    <Button
        android:id="@+id/btn_turnUp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="130dp"
        android:text="上"
        />
    <Button
        android:id="@+id/btn_turnRight"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="87dp"
        android:layout_marginRight="8dp"
        android:text="右"
        />
    <Button
        android:id="@+id/btn_turnLeft"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="87dp"
        android:layout_marginRight="150dp"
        android:text="左"
        />




</RelativeLayout>


